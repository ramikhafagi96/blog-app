<h1 class="text-center mt-4">Bloggers</h1>
<div class="flickr_pagination">
    <%= will_paginate @users, :container => false %>
</div>
<div class="container">
<% @users.each do |user| %>
    <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
            <div class="card text-center shadow mb-5 bg-white rounded">
                <div class="card-header font-italic">
                    by <%= link_to user.username, user_path(user) %>
                </div>
                <div class="card-body">
                <h5 class="card-title"><%= pluralize(user.articles.count, "article") %></h5>
                <% if logged_in? && user == current_user%>
                    <%= link_to 'View Profile', user_path(user), class: "btn btn-outline-success"%>
                    <%= link_to 'Edit Profile',  edit_user_path(user), class: "btn btn-outline-info"%>
                <% end %>
                </div>
                <div class="card-footer text-muted">
                <small>Joine <%= time_ago_in_words(user.created_at) %> ago</small>
                </div>
            </div>
        </div>
    </div>
<% end %>
</div>
<div class="flickr_pagination">
    <%= will_paginate @users, :container => false %>
</div>