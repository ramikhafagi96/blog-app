<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <!-- Title -->
            <h1 class="mt-5"><%= @article.title %></h1>
            
            <!-- Author -->
            <p class="lead">
              by
              <%= link_to @article.user.username, user_path(@article.user), class: "text-info" %>
            </p>
            <% if logged_in? && (@article.user == current_user || current_user.admin?) %>
                    <%= link_to 'Edit',  edit_article_path(@article), class: "btn btn-outline-info"%>
                    <%= link_to 'Delete', article_path(@article), method: :delete, class: "btn btn-outline-danger" %>
            <% end %>
            <hr>

            <!-- Date/Time -->
            <p>Posted on <%= @article.created_at.to_date%></p>

            <hr>

            <p class="lead"><%= @article.description %></p>
        </div>
    </div>

</div>
